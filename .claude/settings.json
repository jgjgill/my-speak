{
	"hooks": {
		"PostToolUse": [
			{
				"matcher": "Write|Edit",
				"hooks": [
					{
						"type": "command",
						"command": "cd \"$CLAUDE_PROJECT_DIR\" && pnpm format-and-lint:fix"
					}
				]
			}
		],
		"Notification": [
			{
				"matcher": "",
				"hooks": [
					{
						"type": "command",
						"command": "osascript -e 'display notification \"Claude Code needs your attention\" with title \"Claude Code\"'"
					}
				]
			}
		]
	}
}

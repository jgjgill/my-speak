{
	"extends": "@repo/typescript-config/nextjs.json",
	"compilerOptions": {
		"plugins": [{ "name": "next" }],
		"paths": {
			"@/shared/*": ["./src/shared/*"],
			"@/entities/*": ["./src/entities/*"],
			"@/features/*": ["./src/features/*"],
			"@/widgets/*": ["./src/widgets/*"],
			"@/views/*": ["./src/views/*"],
			"@/app/*": ["./src/app/*"]
		}
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"next-env.d.ts",
		"next.config.js",
		".next/types/**/*.ts"
	],
	"exclude": ["node_modules"]
}
